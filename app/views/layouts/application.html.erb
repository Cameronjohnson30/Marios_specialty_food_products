<!DOCTYPE html>
<html>
  <head>
    <title>RailsMariosSpecialty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=devise-width, initial-scale=1">
  </head>

  <body>
  
  <%= flash[:alert] %>
  <%= flash[:notice] %>
  
  <header class="navi_bar">
    <% if user_signed_in? %>
      <div>Signed in as: <%= current_user.email.split('@')[0].capitalize %></div>
    <% end %>
    <% if current_user %>
      <h6><%= link_to "Edit Account", edit_user_registration_path %></h6>
      <h6><%= link_to 'Logout', destroy_user_session_path, method: :delete %></h6>
    <% else %>
      <h6><%= link_to "Sign-In", new_user_session_path%></h6>
      <h6><%= link_to "Sign-Up", new_user_registration_path%></h6>
    <% end %>
    <h6><%= link_to "Home", root_path %></h6>
  </header>

    <div class = "logo">
    <%= image_tag("logo/logo.png") %>
    </div>

  <div class="title"> 
  <h1>Marios Specialty Food Products</h1>
  </div>

    <div class= "pics">
    <%= image_tag("background/food_1.jpg", {:style => "width:295px;"}) %>
    <%= image_tag("background/food_3.jpg", {:style => "width:355px;"}) %>
    <%= image_tag("background/food_2.jpg", {:style => "width:360px;"}) %>
    <%= image_tag("background/food_5.jpg", {:style => "width:240px;"}) %>
    <%= image_tag("background/food_6.jpg", {:style => "width:300px;"}) %>
    </div>

    <%= yield %>

  </body>
</html>
