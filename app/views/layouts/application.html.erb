<!DOCTYPE html>
<html>
  <head>
    <title>RailsMariosSpecialty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=devise-width, initial-scale=1">
  </head>
  <body>
  <%= flash[:alert] %>
  <%= flash[:notice] %>
  
  <header class="navi_bar">
    <% if user_signed_in? %>
      <div>Signed in as: <%= current_user.email.split('@')[0].capitalize %></div>
    <% end %>
    <% if current_user %>
      <h6><%= link_to "Edit Account", edit_user_registration_path %></h6>
      <h6><%= link_to 'Logout', destroy_user_session_path, method: :delete %></h6>
    <% else %>
      <h6><%= link_to "Sign-In", new_user_session_path%></h6>
      <h6><%= link_to "Sign-Up", new_user_registration_path%></h6>
    <% end %>
    <h6><%= link_to "Home", root_path %></h6>
  </header>

  <header class="title"> 
  <h1>Marios Specialty Food Products</h1>
  </header>
  
  <%= yield %>

  </body>
</html>
